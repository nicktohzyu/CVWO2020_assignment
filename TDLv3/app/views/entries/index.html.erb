<p id="notice"></p>
<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
<li><%= link_to "Edit Profile", edit_user_registration_path, method: :get %></li>

<h1>Entries</h1>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Due date</th>
      <th>User</th>
      <th>Tags</th>
      <th>Done?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <% if !entry.done %>
        <tr>
          <td><%= entry.content %></td>
          <td><%= entry.due_date %></td>
          <td><%= entry.user_id %></td>
          <td><%= raw entry.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></td>
          <td><%= entry.done %></td>
          <td><%= link_to 'Mark as Done',  user_entry_toggle_done_path(current_user.id, entry.id), method: :put %></td>
          <td><%= link_to 'Edit', edit_user_entry_path(current_user.id, entry.id) %></td>
          <td><%= link_to 'Destroy', [current_user, entry], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<h2>Completed Entries</h2>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Due date</th>
      <th>User</th>
      <th>Done?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <% if entry.done %>
        <tr>
          <td><%= entry.content %></td>
          <td><%= entry.due_date %></td>
          <td><%= entry.user_id %></td>
          <td><%= entry.done %></td>
          <td><%= link_to 'Mark as Not Done',  user_entry_toggle_done_path(current_user.id, entry.id), method: :put %></td>
          <td><%= link_to 'Edit', edit_user_entry_path(current_user.id, entry.id) %></td>
          <td><%= link_to 'Destroy', [current_user, entry], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>

